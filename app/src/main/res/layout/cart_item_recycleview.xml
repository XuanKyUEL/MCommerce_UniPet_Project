<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardPreventCornerOverlap="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvProductCart"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/svn_gilroy_bold"
            android:text="Royal Canin Rottweiler Puppy con mèo con đi hia long nhong"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imvProductCart"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/svn_gilroy_bold"
            android:text="100000 đồng"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/darkSecondary"
            app:layout_constraintStart_toEndOf="@id/imvProductCart"
            app:layout_constraintTop_toBottomOf="@id/txtProductName"/>

        <TextView
            android:id="@+id/txtNumberOrder"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_numberorder_cart"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/darkSecondary"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imvProductCart"
            app:layout_constraintTop_toBottomOf="@id/txtProductPrice" />

        <TextView
            android:id="@+id/txtSumNumbPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/svn_gilroy_bold"
            android:gravity="right"
            android:text="100000 đồng"
            android:textColor="@color/brandPrimary"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtNumberOrder" />
        <TextView
            android:id="@+id/txtSumPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/svn_gilroy_bold"
            android:text="Tạm tính"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/darkSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtSumNumbPrice"/>
        <ImageView
            android:id="@+id/imvMinus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_cart_minus"
            app:layout_constraintStart_toStartOf="@id/txtNumberOrder"
            app:layout_constraintTop_toTopOf="@id/txtNumberOrder"
            app:layout_constraintBottom_toBottomOf="@id/txtNumberOrder"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/imvPlus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_cart_plus"
            app:layout_constraintEnd_toEndOf="@id/txtNumberOrder"
            app:layout_constraintTop_toTopOf="@id/txtNumberOrder"
            app:layout_constraintBottom_toBottomOf="@id/txtNumberOrder"
            android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
