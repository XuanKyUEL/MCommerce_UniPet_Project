<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.onboarding.OnBoardSecondScreen">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/contentdescription"
        android:scaleType="centerCrop"
        android:src="@drawable/dog_1" />

    <TextView
        android:id="@+id/tv_skip_intro_screen2"
        style="@style/HEAD4_BOLD_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="25dp"
        android:text="@string/bo_qua"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_intro_content_layer"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2">

        <TextView
            style="@style/HEAD1_BOLD_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="9dp"
            android:text="@string/intro_title_2" />

        <TextView
            style="@style/HEAD4_BOLD_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:gravity="center"
            android:lineHeight="28.5dp"
            android:text="@string/content_intro_02"
            android:textColor="@color/darkTertiary" />

        <Button
            android:id="@+id/btn_intro_sc_screen"
            style="@style/HEAD4_BOLD_20"
            android:layout_width="367dp"
            android:layout_height="65dp"
            android:layout_marginBottom="38dp"
            android:backgroundTint="@color/brandPrimary"
            android:drawableEnd="@drawable/next_btn_intro_white"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/tiep_tuc" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>